<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="26dp"
        android:elevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12/12/2022" />

        <ImageView
            android:id="@+id/sleepStatImageView"
            android:layout_width="46dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/sleep_vector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.549"
            app:layout_constraintStart_toEndOf="@+id/moodStatImageView"
            app:layout_constraintTop_toTopOf="@+id/moodStatImageView" />

        <ImageView
            android:id="@+id/nutritionStatImageView"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/nutrition_vector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sleepStatImageView"
            app:layout_constraintStart_toStartOf="@+id/sleepStatImageView"
            app:layout_constraintTop_toBottomOf="@+id/sleepStatImageView" />

        <ImageView
            android:id="@+id/waterStatImageView"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/water_vector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/moodStatImageView"
            app:layout_constraintStart_toStartOf="@+id/moodStatImageView"
            app:layout_constraintTop_toBottomOf="@+id/moodStatImageView" />

        <ImageView
            android:id="@+id/moodStatImageView"
            android:layout_width="45dp"
            android:layout_height="41dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/mood_vector"
            app:layout_constraintBottom_toTopOf="@+id/waterStatImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

        <TextView
            android:id="@+id/moodStatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/moodStatImageView"
            app:layout_constraintEnd_toStartOf="@+id/sleepStatImageView"
            app:layout_constraintStart_toEndOf="@+id/moodStatImageView"
            app:layout_constraintTop_toTopOf="@+id/moodStatImageView"
            tools:text="Exhausted" />

        <TextView
            android:id="@+id/waterStatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/waterStatImageView"
            app:layout_constraintEnd_toStartOf="@+id/nutritionStatImageView"
            app:layout_constraintStart_toEndOf="@+id/waterStatImageView"
            app:layout_constraintTop_toTopOf="@+id/waterStatImageView"
            tools:text="16oz" />

        <TextView
            android:id="@+id/nutritionStatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/nutritionStatImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nutritionStatImageView"
            app:layout_constraintTop_toTopOf="@+id/nutritionStatImageView"
            tools:text="1500 Calories" />

        <TextView
            android:id="@+id/sleepStatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/sleepStatImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sleepStatImageView"
            app:layout_constraintTop_toTopOf="@+id/sleepStatImageView"
            tools:text="10 Hours" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>